# Public URL used by browser UI for display and docs snippets.
NEXT_PUBLIC_ORBIT_API_BASE_URL=http://localhost:8000
# Optional contact email used by "Request Pilot Pro" dashboard CTA.
# NEXT_PUBLIC_ORBIT_PILOT_PRO_CONTACT_EMAIL=hello@theorbit.dev

# Optional server override for proxy target.
# If unset, proxy uses NEXT_PUBLIC_ORBIT_API_BASE_URL.
# ORBIT_DASHBOARD_PROXY_BASE_URL=http://localhost:8000

# Dashboard auth mode:
# - password: shared dashboard password (fast bootstrap, less granular)
# - oidc: authorization-code OIDC login with tenant-aware JWT exchange
# - disabled: local development only
ORBIT_DASHBOARD_AUTH_MODE=password

# Password mode (required when ORBIT_DASHBOARD_AUTH_MODE=password)
ORBIT_DASHBOARD_AUTH_PASSWORD=change-me

# OIDC mode (required when ORBIT_DASHBOARD_AUTH_MODE=oidc)
# Configure one or both providers for explicit buttons:
# - Continue with Google
# - Continue with GitHub
#
# Google provider:
# ORBIT_DASHBOARD_OIDC_GOOGLE_CLIENT_ID=your-google-client-id
# ORBIT_DASHBOARD_OIDC_GOOGLE_CLIENT_SECRET=your-google-client-secret
# ORBIT_DASHBOARD_OIDC_GOOGLE_ISSUER_URL=https://accounts.google.com
# ORBIT_DASHBOARD_OIDC_GOOGLE_REDIRECT_URI=https://your-dashboard-domain.com/api/dashboard/auth/oidc/callback
# ORBIT_DASHBOARD_OIDC_GOOGLE_SCOPES=openid profile email
# ORBIT_DASHBOARD_OIDC_GOOGLE_PROMPT=select_account
#
# GitHub provider:
# ORBIT_DASHBOARD_OIDC_GITHUB_CLIENT_ID=your-github-client-id
# ORBIT_DASHBOARD_OIDC_GITHUB_CLIENT_SECRET=your-github-client-secret
# ORBIT_DASHBOARD_OIDC_GITHUB_REDIRECT_URI=https://your-dashboard-domain.com/api/dashboard/auth/oidc/callback
# ORBIT_DASHBOARD_OIDC_GITHUB_SCOPES=read:user user:email
#
# Optional shared tenant claim keys for account-key derivation:
# ORBIT_DASHBOARD_OIDC_TENANT_CLAIMS=tid,org_id,organization
#
# Legacy single-provider OIDC variables are still supported:
# ORBIT_DASHBOARD_OIDC_ISSUER_URL=
# ORBIT_DASHBOARD_OIDC_CLIENT_ID=
# ORBIT_DASHBOARD_OIDC_CLIENT_SECRET=

# Provider quick examples are in:
# front-end/.env.oidc.providers.example

# Session hardening
ORBIT_DASHBOARD_SESSION_SECRET=change-me-with-long-random-secret
# ORBIT_DASHBOARD_SESSION_TTL_SECONDS=43200

# Optional CSRF origin allow-list for dashboard mutation routes.
# Defaults to request origin if unset.
# ORBIT_DASHBOARD_ALLOWED_ORIGINS=https://your-dashboard-domain.com
# By default, missing Origin/Referer on mutation requests is rejected.
# Set true only if your proxy/edge strips both headers.
# ORBIT_DASHBOARD_ALLOW_MISSING_ORIGIN=false

# Login throttle / lockout (password mode)
# ORBIT_DASHBOARD_LOGIN_WINDOW_SECONDS=900
# ORBIT_DASHBOARD_LOGIN_MAX_ATTEMPTS=10
# ORBIT_DASHBOARD_LOGIN_LOCKOUT_SECONDS=900

# Security fallback (not recommended): allow id_token-only OIDC claims when userinfo endpoint
# is unavailable. Default is false for safer provider claim handling.
# ORBIT_DASHBOARD_OIDC_ALLOW_UNSIGNED_ID_TOKEN_FALLBACK=false

# Proxy auth mode:
# - exchange (recommended): mint short-lived tenant-scoped Orbit JWT per request.
# - static: use one static ORBIT_DASHBOARD_SERVER_BEARER_TOKEN for all requests.
ORBIT_DASHBOARD_PROXY_AUTH_MODE=exchange

# Exchange mode JWT signing settings
ORBIT_DASHBOARD_ORBIT_JWT_SECRET=change-me
# ORBIT_DASHBOARD_ORBIT_JWT_ISSUER=orbit
# ORBIT_DASHBOARD_ORBIT_JWT_AUDIENCE=orbit-api
# ORBIT_DASHBOARD_ORBIT_JWT_ALGORITHM=HS256
# ORBIT_DASHBOARD_ORBIT_JWT_TTL_SECONDS=300

# Static mode fallback token
# ORBIT_DASHBOARD_SERVER_BEARER_TOKEN=orbit_pk_...
