# Public URL used by browser UI for display and docs snippets.
NEXT_PUBLIC_ORBIT_API_BASE_URL=http://localhost:8000

# Optional server override for proxy target.
# If unset, proxy uses NEXT_PUBLIC_ORBIT_API_BASE_URL.
# ORBIT_DASHBOARD_PROXY_BASE_URL=http://localhost:8000

# Server-side bearer token used by /api/dashboard/* proxy to call Orbit API.
ORBIT_DASHBOARD_SERVER_BEARER_TOKEN=

# Dashboard auth mode:
# - password: require login to issue HTTP-only session cookie.
# - disabled: no login required (local development only).
ORBIT_DASHBOARD_AUTH_MODE=password
ORBIT_DASHBOARD_AUTH_PASSWORD=change-me

# Used to sign dashboard session cookies.
# Generate a long random secret for production.
ORBIT_DASHBOARD_SESSION_SECRET=change-me-with-long-random-secret

# Optional, defaults to 43200 (12 hours).
# ORBIT_DASHBOARD_SESSION_TTL_SECONDS=43200
