# Shared dashboard settings
NEXT_PUBLIC_ORBIT_API_BASE_URL=https://api.your-orbit-domain.com
ORBIT_DASHBOARD_PROXY_AUTH_MODE=exchange
ORBIT_DASHBOARD_ORBIT_JWT_SECRET=<same-secret-as-orbit-api-jwt-verifier>
ORBIT_DASHBOARD_SESSION_SECRET=<long-random-secret>
ORBIT_DASHBOARD_AUTH_MODE=oidc
# Optional hardening controls:
# ORBIT_DASHBOARD_ALLOWED_ORIGINS=https://orbit-memory.vercel.app
# ORBIT_DASHBOARD_ALLOW_MISSING_ORIGIN=false
# ORBIT_DASHBOARD_OIDC_ALLOW_UNSIGNED_ID_TOKEN_FALLBACK=false

# Optional: tenant claim mapping for account derivation
# ORBIT_DASHBOARD_OIDC_TENANT_CLAIMS=tid,org_id,organization

# -------------------------
# Google OIDC
# -------------------------
# ORBIT_DASHBOARD_OIDC_GOOGLE_CLIENT_ID=<google-client-id>
# ORBIT_DASHBOARD_OIDC_GOOGLE_CLIENT_SECRET=<google-client-secret>
# ORBIT_DASHBOARD_OIDC_GOOGLE_ISSUER_URL=https://accounts.google.com
# ORBIT_DASHBOARD_OIDC_GOOGLE_REDIRECT_URI=https://your-dashboard-domain.com/api/dashboard/auth/oidc/callback
# ORBIT_DASHBOARD_OIDC_GOOGLE_SCOPES=openid profile email
# ORBIT_DASHBOARD_OIDC_GOOGLE_PROMPT=select_account

# -------------------------
# GitHub OAuth
# -------------------------
# ORBIT_DASHBOARD_OIDC_GITHUB_CLIENT_ID=<github-client-id>
# ORBIT_DASHBOARD_OIDC_GITHUB_CLIENT_SECRET=<github-client-secret>
# ORBIT_DASHBOARD_OIDC_GITHUB_REDIRECT_URI=https://your-dashboard-domain.com/api/dashboard/auth/oidc/callback
# ORBIT_DASHBOARD_OIDC_GITHUB_SCOPES=read:user user:email

# -------------------------
# Legacy single-provider OIDC fallback (still supported)
# -------------------------
# ORBIT_DASHBOARD_OIDC_ISSUER_URL=https://<tenant>.us.auth0.com
# ORBIT_DASHBOARD_OIDC_CLIENT_ID=<oidc-client-id>
# ORBIT_DASHBOARD_OIDC_CLIENT_SECRET=<oidc-client-secret>
# ORBIT_DASHBOARD_OIDC_REDIRECT_URI=https://your-dashboard-domain.com/api/dashboard/auth/oidc/callback
# ORBIT_DASHBOARD_OIDC_SCOPES=openid profile email
